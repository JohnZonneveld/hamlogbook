<div class="container">
    <header><img src="../../images/radiostationsketch.jpg" class="img-responsive main-image"></header>
    <div class="col-md-8 col-md-offset-2">
        <h2>Edit a Callsign</h2>
        <% if session[:callsign] == @callsign.slug%>
            <a href="/">Home</a> | <a href="/logout">Log Out</a><br><br>
            <h4>
            <form method="post" action="/callsigns/<%=@callsign.slug%>">
                <input type="hidden" name="_method" value="patch">
                <p><label for="callsign">Callsign: </label>
                <input type ="text" name="callsign[name]" value="<%=@callsign.name%>">&emsp;
                <input type="checkbox" name="callsign[active]"<%='checked' if !!@callsign.active %>>&ensp;Active</p>
                <p><label for="gridsquare">GridSquare: </label>
                <input type="text" name="callsign[gridsquare]" value="<%=@callsign.gridsquare%>"></p>
                <br>
                <input type="submit" value="Update Callsign">
            </form>
            </h4>
        <% else %>
            <a href="/signup">Sign Up </a> | <a href="/login">Log In</a>
            <br><br>
            <i>For this you need to be logged in!</i>   
        <% end %>
    </div>
</div>